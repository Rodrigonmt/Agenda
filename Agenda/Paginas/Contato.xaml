<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.Paginas.Contato"
             Title="Contato">
    <VerticalStackLayout Margin="10" HorizontalOptions="Center" Padding="10">
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="ID" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Entry x:Name="TXTID" FontSize="Large"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Nome" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Entry x:Name="TXTNome" FontSize="Large"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Email" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Entry x:Name="TXTEmail" FontSize="Large"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Tel" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Entry x:Name="TXTTelefone" FontSize="Large"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Obs" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Entry x:Name="TXTObservacao" FontSize="Large"/>
        </HorizontalStackLayout>

        <Button Text="Salvar" x:Name="BTNSalvar"/>
        <Button Text="Cancelar" x:Name="BTNCancelar" TextColor="Red" Background="Transparent"/>

    </VerticalStackLayout>
</ContentPage>